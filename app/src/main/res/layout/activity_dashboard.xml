                android:text="49"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="67"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1.58"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout
